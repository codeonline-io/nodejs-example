    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch index.ts",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/ts-node-dev",
            "cwd": "${workspaceFolder}",
            "args": [
                "--project",
                "${workspaceFolder}/tsconfig.json",
                "--respawn",
                "--",
                "${workspaceFolder}/src/index.ts"
            ]
        }
    ]
}